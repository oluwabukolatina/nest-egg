{
  "name": "nest-egg",
  "version": "1.0.0",
  "description": "Loan Application API for nestegg.ai",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=ci sequelize-cli db:migrate:undo:all --config app/sequelize-config.js && NODE_ENV=ci sequelize-cli db:migrate --config app/sequelize-config.js && NODE_ENV=ci sequelize-cli db:seed:all --config app/sequelize-config.js && NODE_ENV=ci jest --detectOpenHandles --forceExit --verbose --testTimeout=500000",
    "test:full": "NODE_ENV=test sequelize-cli db:migrate:undo:all --config app/sequelize-config.js && NODE_ENV=test sequelize-cli db:migrate --config app/sequelize-config.js && NODE_ENV=test sequelize-cli db:seed:all --config app/sequelize-config.js && NODE_ENV=test jest --watchAll --detectOpenHandles --forceExit --verbose --testTimeout=500000",
    "migrate": "sequelize-cli db:migrate --config app/sequelize-config.js",
    "db:seed": "NODE_ENV=production sequelize-cli db:seed:all --config app/sequelize-config.js",
    "migrate:prod": "NODE_ENV=production sequelize-cli db:migrate --config app/sequelize-config.js",
    "migrate:dev": "NODE_ENV=development sequelize-cli db:migrate --config app/sequelize-config.js",
    "migrate:undo": "sequelize-cli db:migrate:undo --config app/sequelize-config.js",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all --config app/sequelize-config.js",
    "migrate:create": "sequelize-cli migration:generate --name",
    "build": "tsc",
    "start": "node dist/app/server.js",
    "build-ts": "tsc",
    "dev": "nodemon app/server.ts",
    "lint": "tsc --noEmit && eslint '*/**/*.{ts}' --quiet --fix",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "lint:ts": "eslint --ext=ts app",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:write": "npm run prettier:base -- --write \"app/**/*.{ts,tsx}\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app/server.js"
  },
  "keywords": [],
  "author": "Oluwabukola Tina",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "@types/sinon": "^9.0.11",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "faker": "^5.5.3",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.2.0",
    "jest": "^29.5.0",
    "joi": "^17.9.2",
    "mimemessage": "^1.0.5",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "node-mocks-http": "^1.10.1",
    "nunjucks": "^3.2.3",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.6",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "superagent": "^8.0.9",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/concurrently": "^6.0.1",
    "@types/debug": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sequelize-cli": "^6.6.2",
    "should": "^13.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write && lint-staged"
    }
  },
  "precommit": "NODE_ENV=production lint-staged",
  "lint-staged": {
    "app/**/*.{ts}": [
      "eslint --fix"
    ]
  }
}
